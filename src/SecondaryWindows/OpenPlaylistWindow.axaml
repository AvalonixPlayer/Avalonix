<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonix.SecondaryWindows.OpenPlaylistWindow"
        Title="OpenPlaylistWindow">
         <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#80808080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="7"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#50505050"/> </Style>
        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#30303030"/> </Style>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="#80808080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#3deb34"/>
            <Setter Property="TextBlock.Foreground" Value="Black"/> </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, Auto " Margin="10">
        <Label Grid.Row="0">Select Playlist to play</Label>
        
        <ListBox Grid.Row="1"
                 Margin="0,0,0,10"
                 x:Name="PlaylistsListBox">
        </ListBox>
    </Grid>
</Window>
