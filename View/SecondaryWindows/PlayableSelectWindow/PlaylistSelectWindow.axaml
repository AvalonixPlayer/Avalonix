<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:playableSelectViewModel1="clr-namespace:Avalonix.ViewModel.PlayableSelectViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="300" Height="600" CanResize="False"
        x:Class="Avalonix.View.SecondaryWindows.PlayableSelectWindow.PlayableSelectWindow"
        x:DataType="playableSelectViewModel1:IPlayableSelectViewModel"
        Title="Avalonix - Playlist Select">

    <Design.DataContext>
        <playableSelectViewModel1:PlayableSelectViewModel />
    </Design.DataContext>

    <StackPanel Margin="10">
        <Border CornerRadius="12" Padding="5" Margin="5">
            <StackPanel>
                <TextBox AcceptsTab="False" TextChanged="SearchBox_OnTextChanged" Name="SearchBox" Height="50"
                         Watermark="Search" />
                <ListBox Height="500" Name="PlaylistBox" SelectionChanged="ActionSelectedPlaylist" />
            </StackPanel>
        </Border>
    </StackPanel>
</Window>