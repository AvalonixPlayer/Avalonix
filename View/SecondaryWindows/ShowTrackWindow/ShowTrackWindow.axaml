<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Avalonix.View.SecondaryWindows.ShowTrackWindow.ShowTrackWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="500" Height="450"
        CanResize="False"
        Title="Avalonix - "
        Icon="/Assets/avalonix-logo.ico">

    <StackPanel Classes="vertical">
        <Border>
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="DemiBold" Name="Name">Title: </TextBlock>
                <TextBlock FontSize="13" FontWeight="Light" Name="Artist">Artist: </TextBlock>
            </StackPanel>
        </Border>
        <Border>
            <StackPanel Orientation="Vertical">
                <TextBlock FontSize="13" FontWeight="Light" Name="Album">Album: </TextBlock>
                <TextBlock FontSize="13" FontWeight="Light" Name="Genre">Genre: </TextBlock>
                <TextBlock FontSize="13" FontWeight="Light" Name="MediaFileFormat">Format: </TextBlock>
                <TextBlock FontSize="13" FontWeight="Light" Name="Year">Year: </TextBlock>
                <TextBlock FontSize="13" FontWeight="Light" Name="Duration">Duration: </TextBlock>
            </StackPanel>
        </Border>
        <Border>
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="DemiBold">Lyrics</TextBlock>
                <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                    <SelectableTextBlock FontWeight="SemiLight" FontStyle="Italic" Name="Lyrics"
                                         Text="Not found" TextWrapping="Wrap" />
                </ScrollViewer>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>