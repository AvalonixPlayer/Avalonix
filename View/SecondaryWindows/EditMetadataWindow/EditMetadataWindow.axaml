<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Avalonix.View.SecondaryWindows.EditMetadataWindow.EditMetadataWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="500" Height="700"
        CanResize="False"
        Title="Avalonix - "
        Icon="/Assets/avalonix-logo.ico">
    <StackPanel Classes="vertical">
        <Border>
            <StackPanel Orientation="Vertical">
                <Button Name="Apply" Click="Apply_OnClick">Apply</Button>
                <TextBlock>Title: </TextBlock>
                <TextBox FontSize="13" FontWeight="DemiBold" Name="Name">Title: </TextBox>
                <TextBlock>Artist: </TextBlock>
                <TextBox FontSize="13" FontWeight="DemiBold" Name="Artist">Artist: </TextBox>
                <TextBlock>Album: </TextBlock>
                <TextBox FontSize="13" FontWeight="DemiBold" Name="Album">Album: </TextBox>
                <TextBlock>Genre: </TextBlock>
                <TextBox FontSize="13" FontWeight="DemiBold" Name="Genre">Genre: </TextBox>
                <TextBlock>Year: </TextBlock>
                <TextBox FontSize="13" FontWeight="DemiBold" Name="Year">Year: </TextBox>
                <TextBlock>Lyric: </TextBlock>
                <TextBox FontSize="13" Height="100" FontWeight="DemiBold" Name="Lyric" AcceptsReturn="True">Lyric: </TextBox>
                <Button Name="ChangeAlbumCover" Click="SelectCover">Cover</Button>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>