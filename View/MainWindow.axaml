<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main1="clr-namespace:Avalonix.ViewModel.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="800" Height="600" CanMaximize="True"
        MinHeight="600" MinWidth="800"
        x:Class="Avalonix.View.MainWindow"
        x:DataType="main1:MainWindowViewModel"
        Title="Avalonix">

    <Design.DataContext>
        <main1:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,90" ColumnDefinitions="300,*" ShowGridLines="False" Margin="10">
        <Border Grid.Row="0" Grid.Column="0" >
            <Grid ColumnDefinitions="100,*">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="5">
                    <WrapPanel Tag="GlobalTabs" 
                               VerticalAlignment="Center"
                               Orientation="Horizontal">
                        <Button Tag="Playboxes" Click="SelectTab" Classes="h2" Margin="0,0,5,0">
                            <TextBlock Text="Playboxes" />
                        </Button>
                        <Button Tag="Metadata" Click="SelectTab" Classes="h2" Margin="0,0,5,0">
                            <TextBlock Text="Metadata" />
                        </Button>
                        <Button Tag="Settings" Click="SelectTab" Classes="h2" Margin="0,0,5,0">
                            <TextBlock Text="Settings" />
                        </Button>
                    </WrapPanel>
                </ScrollViewer>
                
                <WrapPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           x:Name="PlContent" IsVisible="True"
                           Orientation="Horizontal" Margin="5,0,5,5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">
                    <Button Click="NewPlaylistButton_OnClick" Classes="h2" Margin="5,0,0,0">New</Button>
                    <Button Click="SelectPlaylist_OnClick" Classes="h2" Margin="5,0,0,0">Select</Button>
                    <Button Click="DeletePlaylistButton_OnClick" Classes="h2">Delete</Button>
                </WrapPanel>

