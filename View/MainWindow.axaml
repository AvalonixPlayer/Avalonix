<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main1="clr-namespace:Avalonix.ViewModel.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="800" Height="600" CanMaximize="True"
        MinHeight="600" MinWidth="800"
        x:Class="Avalonix.View.MainWindow"
        x:DataType="main1:MainWindowViewModel"
        Title="Avalonix">

    <Design.DataContext>
        <main1:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,90" ColumnDefinitions="300,*" ShowGridLines="False" Margin="10">
        <Border Grid.Row="0" Grid.Column="0">
            <Grid ColumnDefinitions="40,*">

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                    <Button Tag="Pl" Click="SelectTab" Padding="5,3" HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center">
                        <TextBlock Text="Pl" />
                    </Button>
                    <Button Tag="Al" Click="SelectTab" Padding="10,5" HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center">
                        <TextBlock Text="Al" />
                    </Button>
                    <Button Tag="Tr" Click="SelectTab" Padding="10,5" HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center">
                        <TextBlock Text="Tr" />
                    </Button>
                    <Button Tag="PQ" Click="SelectTab" Padding="10,5" HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center">
                        <TextBlock Text="PQ" />
                    </Button>
                    <Button Tag="I" Click="SelectTab" Padding="10,5" HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center">
                        <TextBlock Text="I" />
                    </Button>
                </StackPanel>

                <Grid Grid.Column="1" x:Name="ContentArea">
                    <Border x:Name="PlContent" IsVisible="True" VerticalAlignment="Top">
                        <WrapPanel Orientation="Horizontal" Margin="10">
                            <Button Click="NewPlaylistButton_OnClick" Classes="h2">New</Button>
                            <Button Click="SelectPlaylist_OnClick" Classes="h2">Select</Button>
                            <Button Click="DeletePlaylistButton_OnClick" Classes="h2">Delete</Button>
                        </WrapPanel>
                    </Border>

                    <Border x:Name="AlContent" IsVisible="False" VerticalAlignment="Top">
                        <Button Click="SelectAlbum_OnClick" Classes="h2">Select</Button>
                    </Border>

                    <Border x:Name="TrContent" IsVisible="False" VerticalAlignment="Top">
                        <Button Click="PlayAllTracks_OnClick" Classes="h2">Play</Button>
                    </Border>

                    <Border x:Name="PQContent" IsVisible="False" VerticalAlignment="Top">
                        <ListBox MinHeight="300" MaxHeight="300" Name="SongBox" />
                    </Border>

                    <Border x:Name="IContent" IsVisible="False" VerticalAlignment="Top">
                        <WrapPanel Orientation="Horizontal" Margin="10">
                            <Button Click="OpenTrackButton_OnClick" MaxWidth="120" Width="120">Show Track</Button>
                            <Button Click="OpenEditTrackButton_OnClick" MaxWidth="120" Width="120">Edit Track</Button>
                            <Button Click="OpenSettingsWindowButton_OnClick" MaxWidth="120" Width="120">Open Settings</Button>
                            <Button Click="AboutButton_OnClick" Content="?" />
                        </WrapPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Height="70">
            <StackPanel Classes="center">
                <StackPanel Classes="center">
                    <Button Name="BackButton" Click="PlayTrackBefore_OnClick">
                        <Image Source="../Assets/buttons/back.png" />
                    </Button>
                    <Button Name="PauseButton" Click="PauseButton_OnClick">
                        <Image Source="../Assets/buttons/pause.png" />
                    </Button>
                    <Button Name="NextButton" Click="PlayNextTrack">
                        <Image Source="../Assets/buttons/next.png" />
                    </Button>
                    <Button Click="ShuffleButton_OnClick" Name="Shuffle">
                        <Image Source="../Assets/buttons/EnableSnuffle.png" />
                    </Button>
                    <Button Click="LoopButton_OnClick" Name="Loop">
                        <Image Source="../Assets/buttons/EnableLoop.png" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <Label Name="TrackName" FontSize="23" FontWeight="ExtraBold" Content=""
                       HorizontalContentAlignment="Center" HorizontalAlignment="Center" />
                <Label Name="ArtistName" FontSize="16" FontWeight="ExtraBold"
                       BorderBrush="DimGray" Content="" Margin="0, 0, 0, 5"
                       HorizontalContentAlignment="Center" HorizontalAlignment="Center"
                       Foreground="White" />
                <Border Name="AlbumCover" Height="200" Width="200" Background="#cc212121"
                        CornerRadius="25" ClipToBounds="True">
                    <Image Source="" />
                </Border>
                
                <Label Name="TrackDuration" FontSize="14" FontWeight="ExtraBold"
                       BorderBrush="DimGray" Content="0:0" Margin="0, 0, 0, 5"
                       HorizontalContentAlignment="Center" HorizontalAlignment="Center"
                       Foreground="White" />
                
                <Slider HorizontalAlignment="Center" ClipToBounds="True" Name="TrackPositionSlider" Width="120"
                        Height="30" />
                
                <Label FontSize="14" FontWeight="ExtraBold"
                       BorderBrush="DimGray" Content="Volume" Margin="0, 0, 0, 5"
                       HorizontalContentAlignment="Center" HorizontalAlignment="Center"
                       Foreground="White"/>
                <Slider HorizontalAlignment="Center" ValueChanged="VolumeSlider_OnValueChanged" Name="VolumeSlider"
                        Background="Transparent" Height="30" Width="150" />
            </StackPanel>
        </Border>
    </Grid>
</Window>