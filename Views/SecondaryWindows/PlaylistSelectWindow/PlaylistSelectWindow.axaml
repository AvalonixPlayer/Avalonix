<Window  xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:playlistEditOrCreate="clr-namespace:Avalonix.ViewModels.PlaylistEditOrCreate"
         mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
         Width="300" Height="600" CanResize="False"
         Background="Transparent"
         TransparencyLevelHint="AcrylicBlur"
         x:Class="Avalonix.Views.SecondaryWindows.PlaylistSelectWindow.PlaylistSelectWindow"
         x:DataType="playlistEditOrCreate:PlaylistEditOrCreateWindowViewModel"
         Icon="/Assets/avalonia-logo.ico"
         Title="Avalonix - Playlist Select">
    
        <Design.DataContext>
            <playlistEditOrCreate:PlaylistEditOrCreateWindowViewModel/>
        </Design.DataContext>
    
        <StackPanel Margin="10">
            <Border Background="#33A9A9A9" CornerRadius="12" Padding="5" Margin="5">
                <StackPanel>
                    <TextBox AcceptsTab="False" TextChanged="SearchBox_OnTextChanged" Name="SearchBox" Height="50" BorderBrush="DimGray" Background="#33A9A9A9" CornerRadius="12" Watermark="Search"/>
                    <ListBox Height="500" Name="PlaylistBox" SelectionChanged="ActionSelectedPlaylist"></ListBox>
                </StackPanel>
            </Border> 
        </StackPanel>
</Window>
