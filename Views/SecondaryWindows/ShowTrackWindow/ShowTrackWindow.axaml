<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Avalonix.Views.SecondaryWindows.ShowTrackWindow.ShowTrackWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="500" Height="250" 
        Title="Avalonix - ">
        
    <StackPanel Classes="vertical">
        <Border>
            <Image Name="Image" MaxHeight="150" MaxWidth="150"/>
        </Border>
        <Label FontWeight="DemiBold" Name="Name">Song Name</Label>
        <Label FontSize="13" FontWeight="Light" Name="Artist">Song Name</Label>
        <Label FontSize="13" FontWeight="Light" Name="Album">Song Name</Label>
    </StackPanel>
</Window>