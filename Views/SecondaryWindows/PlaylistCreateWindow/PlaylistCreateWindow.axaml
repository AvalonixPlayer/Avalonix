<Window  xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vm="using:Avalonix.ViewModels"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
         Width="300" Height="620" CanResize="False"
         Background="Transparent"
         TransparencyLevelHint="AcrylicBlur"
         x:Class="Avalonix.Views.SecondaryWindows.PlaylistCreateWindow.PlaylistCreateWindow"
         x:DataType="vm:PlaylistEditOrCreateWindowViewModel"
         Icon="/Assets/avalonia-logo.ico"
         Title="Avalonix - Playlist Create">
    
        <Design.DataContext>
            <vm:PlaylistEditOrCreateWindowViewModel/>
        </Design.DataContext>
    
        <StackPanel Margin="10">
            <Border Background="#33A9A9A9" Padding="5" Margin="5">
                <StackPanel>
                    <Label Padding="10">Playlist Name</Label> 
                    <TextBox Name="PlaylistName" Padding="5" Height="50" BorderBrush="DimGray" Background="#33A9A9A9" CornerRadius="7" Watermark="Playlist Name"/>
                </StackPanel>
            </Border>
            <Border Background="#33A9A9A9" Padding="5" Margin="5">
                <StackPanel>
                    <Label Padding="10">Songs</Label> 
                    <ListBox Height="300" Name="NewSongBox"></ListBox>
                    <StackPanel Orientation="Horizontal">
                        <Button Width="125" Click="AddButton_OnClick">Add</Button>             
                        <Button Width="125" HorizontalAlignment="Left" Click="RemoveButton_OnClick" Name="RemoveButton" IsEnabled="False">Remove</Button>             
                    </StackPanel>
                    <Button Width="260" Click="CreatePlaylistButton_OnClick">Create</Button>
                </StackPanel>
            </Border> 
        </StackPanel>
</Window>
