<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:Avalonix.ViewModels.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="980" Height="600" CanMaximize="True"
        MinHeight="800" MinWidth="980" 
        x:Class="Avalonix.Views.MainWindow"
        x:DataType="main:MainWindowViewModel"
        Title="Avalonix - Main Window">

    <Design.DataContext> 
        <main:MainWindowViewModel/> 
    </Design.DataContext>
    
    <Grid RowDefinitions="*,90" ColumnDefinitions="300,*" ShowGridLines="False" Margin="10">
        <Border Grid.Row="0" Grid.Column="0">
            <StackPanel Classes="vertical">
                <StackPanel Classes="horizontal">
                    <Button Click="NewPlaylistButton_OnClick" Classes="h2">New</Button> 
                    <Button Click="SelectPlaylist_OnClick" Classes="h2">Select</Button> 
                    <Button Click="DeletePlaylistButton_OnClick" Classes="h2">Delete</Button> 
                </StackPanel>
                <ListBox MinHeight="600" MaxHeight="600" Name="SongBox"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" Height="70">
            <StackPanel Classes="horizontal">
                <Button Click="AboutButton_OnClick" Content="?"/> 
                <Button Click="SnuffleButton_OnClick" Content="?/*"/> 
            </StackPanel>
        </Border> 
        
        <Border Grid.Row="1" Grid.Column="1" Height="70">
            <StackPanel Classes="center">
                <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                    <Label Name="TrackName" FontSize="23" FontWeight="DemiBold" Content=""/>
                    <Label Name="ArtistName" FontSize="10" FontWeight="Light" FontStyle="Italic" BorderBrush="DimGray" Content="" Margin="0, 0, 0, 5"/>
                </StackPanel>
                <StackPanel Classes="center">
                    <Button Name="BackButton" Click="PlayTrackBefore"><Image Source="../Assets/buttons/back.png"/></Button>
                    <Button Name="PauseButton" Click="Pause"><Image Source="../Assets/buttons/pause.png"/></Button>
                    <Button Name="NextButton" Click="PlayNextTrack"><Image Source="../Assets/buttons/next.png"/></Button>
                    <Button Click="OpenTrackButton_OnClick" MaxWidth="120" Width="120">Show Track</Button>
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Spacing="0" Margin="0">
                    <Label FontWeight="Bold" HorizontalContentAlignment="Center" Content="Volume"/>
                    <Slider HorizontalAlignment="Right" ValueChanged="VolumeSlider_OnValueChanged" Name="VolumeSlider" Background="Transparent" Height="30" Width="150"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Name="AlbumCover" Grid.Row="0" Grid.Column="1" Height="300" Width="300" Background="#cc212121">
            <Image Source="avares://Avalonix/Assets/avalonia-logo.ico"/>
        </Border>
    </Grid>
</Window>