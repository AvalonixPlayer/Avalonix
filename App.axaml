<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonix.App"
             xmlns:local="using:Avalonix"
             RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    
    <Application.Resources>
        <!-- Window -->
        <Color x:Key="WindowBackground">#232323</Color>

        <!-- Texts -->
        <Color x:Key="TextsForeground">White</Color>

        <!-- Panels -->
        <Color x:Key="PanelsColor">#323232</Color>
        <CornerRadius x:Key="PanelsCornerRadius">10</CornerRadius>
        <Thickness x:Key="PanelsPadding">20</Thickness>
        
        <!-- Images -->
        <CornerRadius x:Key="ImagesCorner">30</CornerRadius>
        
        <!-- Buttons -->
        <Color x:Key="ButtonsColor">#8300D5</Color>
        <Color x:Key="ButtonsColorPointerover">#6A00BA</Color>
        <Color x:Key="ButtonsColorClick">#C313FF</Color>
        
        <!-- Sliders -->
    </Application.Resources>
    
    <Application.Styles>
        <StyleInclude Source="../Styles/Default.axaml"></StyleInclude>
    </Application.Styles>
</Application>