<Styles xmlns="https://github.com/avaloniaui"
        xmlns:themes="clr-namespace:ShadUI;assembly=ShadUI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="#0F0F0F">
        <StackPanel Spacing="10">
            <TextBlock Text="Avalonix v1.0.0 - Gray Transparent Theme" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,10" Foreground="#E8E8E8"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Default" FontSize="15" Width="95"/>
                <Button Classes="h2" Content="Alternative" Width="120"/>
            </StackPanel>

            <TextBox Watermark="Enter text here..."/>

            <ListBox Width="200">
                <ListBoxItem>Item 1</ListBoxItem>
                <ListBoxItem>Item 2</ListBoxItem>
                <ListBoxItem>Item 3</ListBoxItem>
            </ListBox>

            <ComboBox SelectedIndex="0">
                <ComboBoxItem>Option 1</ComboBoxItem>
                <ComboBoxItem>Option 2</ComboBoxItem>
            </ComboBox>

            <CheckBox Content="Check me" Foreground="#E8E8E8"/>
            <RadioButton Content="Option A" Foreground="#E8E8E8"/>
            <Slider Minimum="0" Maximum="100" Value="40"/>
            <ProgressBar Minimum="0" Maximum="100" Value="60"/>
        </StackPanel>
        </Border>
    </Design.PreviewWith>

    <themes:ShadTheme/>
    
    <Style Selector="Window">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TransparencyLevelHint" Value="AcrylicBlur"/>
        <Setter Property="Icon" Value="/Assets/avalonix-logo.ico"/>
    </Style>

    <Style Selector="ListBox">
        <Setter Property="Background" Value="#1A1A1A80"/>
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="#50505080"/>
    </Style>
        
    <Style Selector="ListBoxItem">
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="BorderBrush" Value="#70707080"/>
        <Setter Property="Background" Value="#2D2D2D60"/>
        <Setter Property="Foreground" Value="#E8E8E8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.3"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.3"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Background" Value="#4A4A4A80"/>
        <Setter Property="BorderBrush" Value="#90909090"/>
    </Style>

    <Style Selector="ListBoxItem:selected">
        <Setter Property="Background" Value="#606060A0"/>
        <Setter Property="BorderBrush" Value="#B0B0B0FF"/>
    </Style>

    <Style Selector="TextBox">
        <Setter Property="BorderBrush" Value="#50505080"/>
        <Setter Property="Background" Value="#1F1F1F70"/>
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Foreground" Value="#E8E8E8"/>
        <Setter Property="CaretBrush" Value="#B0B0B0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                <ThicknessTransition Property="BorderThickness" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="Background" Value="#2D2D2DA0"/>
        <Setter Property="BorderBrush" Value="#90909090"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
        
    <Style Selector="Button">
        <Setter Property="MaxHeight" Value="70"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="BorderBrush" Value="#70707080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#2D2D2D60"/>
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Foreground" Value="#E8E8E8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.25"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.25"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.25"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#4A4A4A90"/>
        <Setter Property="BorderBrush" Value="#90909090"/>
        <Setter Property="RenderTransform" Value="scale(1.08)"/>
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="#606060B0"/>
        <Setter Property="RenderTransform" Value="scale(0.95)"/>
    </Style>
    
    <Style Selector="Button.h2:pointerover">
        <Setter Property="Background" Value="#555555A0"/>
        <Setter Property="BorderBrush" Value="#A0A0A0FF"/>
        <Setter Property="RenderTransform" Value="scale(1.1)"/>
    </Style>

    <Style Selector="Button.h2:pressed">
        <Setter Property="Background" Value="#707070B0"/>
        <Setter Property="RenderTransform" Value="scale(0.92)"/>
    </Style>
        
    <Style Selector="Button.h2">
        <Setter Property="MaxHeight" Value="90"/>
        <Setter Property="Width" Value="90"/>
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Background" Value="#3A3A3A80"/>
        <Setter Property="BorderBrush" Value="#80808080"/>
        <Setter Property="Foreground" Value="#E8E8E8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.25"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.25"/>
            </Transitions>
        </Setter>
    </Style>
        
    <Style Selector="Border">
        <Setter Property="Background" Value="#1A1A1A60"/>
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="#50505080"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.3"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.3"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ComboBox">
        <Setter Property="Background" Value="#2D2D2D70"/>
        <Setter Property="BorderBrush" Value="#50505080"/>
        <Setter Property="Foreground" Value="#E8E8E8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.25"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.25"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ComboBox:pointerover">
        <Setter Property="Background" Value="#3A3A3A90"/>
        <Setter Property="BorderBrush" Value="#70707090"/>
    </Style>

    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="#E8E8E8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="CheckBox:pointerover">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <Style Selector="RadioButton">
        <Setter Property="Foreground" Value="#E8E8E8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="RadioButton:pointerover">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <Style Selector="Slider">
        <Setter Property="Foreground" Value="#70707080"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Slider:pointerover">
        <Setter Property="Foreground" Value="#90909090"/>
    </Style>

    <Style Selector="ProgressBar">
        <Setter Property="Background" Value="#2D2D2D60"/>
        <Setter Property="Foreground" Value="#80808090"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.5"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="StackPanel.vertical">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="StackPanel.horizontal">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style Selector="StackPanel.center">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="#E8E8E8"/>
    </Style>
</Styles>