<Styles xmlns="https://github.com/avaloniaui"
        xmlns:themes="clr-namespace:ShadUI;assembly=ShadUI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="#1E1E1E">
            <StackPanel Spacing="10">
                <TextBlock Text="Avalonix v1.0.0" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,10" />

                <StackPanel Orientation="Horizontal">
                    <Button Content="Default" FontSize="15" Width="95" />
                    <Button Classes="h2" Content="Alternative" Width="120" />
                </StackPanel>

                <TextBox Watermark="Enter text here..." />

                <ListBox Width="200">
                    <ListBoxItem>Item 1</ListBoxItem>
                    <ListBoxItem>Item 2</ListBoxItem>
                    <ListBoxItem>Item 3</ListBoxItem>
                </ListBox>

                <ComboBox SelectedIndex="0">
                    <ComboBoxItem>Option 1</ComboBoxItem>
                    <ComboBoxItem>Option 2</ComboBoxItem>
                </ComboBox>

                <CheckBox Content="Check me" />
                <RadioButton Content="Option A" />
                <Slider Minimum="0" Maximum="100" Value="40" />
                <ProgressBar Minimum="0" Maximum="100" Value="60" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <themes:ShadTheme />

    <Style Selector="Window">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="TransparencyLevelHint" Value="AcrylicBlur" />
        <Setter Property="Icon" Value="/Assets/avalonix-logo.ico" />
    </Style>

    <Style Selector="ListBox">
        <Setter Property="Background" Value="#ac212121" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="BorderBrush" Value="LightGreen" />
        <Setter Property="Background" Value="#33212121" />
    </Style>

    <Style Selector="TextBox">
        <Setter Property="BorderBrush" Value="DimGray" />
        <Setter Property="Background" Value="#33A9A9A9" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <Style Selector="Button">
        <Setter Property="MaxHeight" Value="70" />
        <Setter Property="Height" Value="60" />
        <Setter Property="Width" Value="60" />
        <Setter Property="BorderBrush" Value="AliceBlue" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#4D2F4F4F" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#662F4F4F" />
    </Style>

    <Style Selector="Button.h2:pointerover">
        <Setter Property="Background" Value="#03A9A9A9" />
    </Style>

    <Style Selector="Button.h2">
        <Setter Property="MaxHeight" Value="90" />
        <Setter Property="Width" Value="90" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Background" Value="#33A9A9A9" />
        <Setter Property="BorderBrush" Value="AliceBlue" />
    </Style>

    <Style Selector="Border">
        <Setter Property="Background" Value="#33A9A9A9" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="BorderBrush" Value="AliceBlue" />
    </Style>

    <Style Selector="StackPanel.vertical">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="StackPanel.horizontal">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>

    <Style Selector="StackPanel.center">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>
</Styles>