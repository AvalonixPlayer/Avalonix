<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Border.Panel">
        <Setter Property="Background" Value="{DynamicResource PanelsColor}" />
        <Setter Property="CornerRadius" Value="{DynamicResource PanelsCornerRadius}" />
        <Setter Property="Padding" Value="{DynamicResource PanelsPadding}" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style Selector="Border.Image">
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="CornerRadius" Value="{DynamicResource ImagesCorner}" />
    </Style>
</Style>