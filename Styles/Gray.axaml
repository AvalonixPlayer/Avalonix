<Styles xmlns="https://github.com/avaloniaui"
        xmlns:themes="clr-namespace:ShadUI;assembly=ShadUI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="Black">
        <StackPanel Spacing="10">
            <TextBlock Text="Avalonix v1.0.0 - Gray Theme" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,10" Foreground="WhiteSmoke"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Default" FontSize="15" Width="95"/>
                <Button Classes="h2" Content="Alternative" Width="120"/>
            </StackPanel>

            <TextBox Watermark="Enter text here..."/>

            <ListBox Width="200">
                <ListBoxItem>Item 1</ListBoxItem>
                <ListBoxItem>Item 2</ListBoxItem>
                <ListBoxItem>Item 3</ListBoxItem>
            </ListBox>

            <ComboBox SelectedIndex="0">
                <ComboBoxItem>Option 1</ComboBoxItem>
                <ComboBoxItem>Option 2</ComboBoxItem>
            </ComboBox>

            <CheckBox Content="Check me" Foreground="WhiteSmoke"/>
            <RadioButton Content="Option A" Foreground="WhiteSmoke"/>
            <Slider Minimum="0" Maximum="100" Value="40"/>
            <ProgressBar Minimum="0" Maximum="100" Value="60"/>
        </StackPanel>
        </Border>
    </Design.PreviewWith>

    <themes:ShadTheme/>
    
    <Style Selector="Window">
        <Setter Property="Background" Value="DimGray"/>
        <Setter Property="TransparencyLevelHint" Value="AcrylicBlur"/>
        <Setter Property="Icon" Value="/Assets/avalonia-logo.ico"/>
    </Style>

    <Style Selector="ListBox">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="Gray"/>
    </Style>
        
    <Style Selector="ListBoxItem">
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="BorderBrush" Value="DimGray"/>
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.3"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.3"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
    </Style>

    <Style Selector="ListBoxItem:selected">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style Selector="TextBox">
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="CaretBrush" Value="LightGray"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                <ThicknessTransition Property="BorderThickness" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
        
    <Style Selector="Button">
        <Setter Property="MaxHeight" Value="70"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="BorderBrush" Value="DimGray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.25"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.25"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.25"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="RenderTransform" Value="scale(1.08)"/>
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="RenderTransform" Value="scale(0.95)"/>
    </Style>
    
    <Style Selector="Button.h2:pointerover">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="RenderTransform" Value="scale(1.1)"/>
    </Style>

    <Style Selector="Button.h2:pressed">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="RenderTransform" Value="scale(0.92)"/>
    </Style>
        
    <Style Selector="Button.h2">
        <Setter Property="MaxHeight" Value="90"/>
        <Setter Property="Width" Value="90"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="DimGray"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.25"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.25"/>
            </Transitions>
        </Setter>
    </Style>
        
    <Style Selector="Border">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.3"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.3"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ComboBox">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.25"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.25"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ComboBox:pointerover">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
    </Style>

    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="CheckBox:pointerover">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="RadioButton">
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="RadioButton:pointerover">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="Slider">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Slider:pointerover">
        <Setter Property="Foreground" Value="LightGray"/>
    </Style>

    <Style Selector="ProgressBar">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.5"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="StackPanel.vertical">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="StackPanel.horizontal">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style Selector="StackPanel.center">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="WhiteSmoke"/>
    </Style>
</Styles>